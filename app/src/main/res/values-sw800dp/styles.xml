<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <!--
      Base application theme for API 14+. This theme completely replaces
      AppBaseTheme from res/values/styles.xml on API 14+ devices.
  -->
  <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    <item name="android:actionOverflowButtonStyle">@style/ActionOverflowButtonStyle</item>
    <item name="android:homeAsUpIndicator">@drawable/ic_ab_back</item>

    <!-- API 14 theme customizations can go here. -->
  </style>

  <style name="TextAppearance.Widget.ActionBar.Title"
         parent="@android:style/TextAppearance">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@drawable/ab_solid</item>
    <item name="android:titleTextStyle">@style/TextAppearance.Widget.ActionBar.Title</item>
  </style>


  <style name="ActionOverflowButtonStyle"
         parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
    <item name="android:src">@drawable/ic_menu_moreoverflow</item>
  </style>

  <style name="AppBaseTheme.NoActionBar" parent="@android:style/Theme.Holo.Light.NoActionBar">
    <!-- API 14 theme customizations can go here. -->
  </style>

  <style name="AppBaseTheme.NoActionBar.Transparent" parent="AppBaseTheme.NoActionBar">
    <!-- API 14 theme customizations can go here. -->
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
  </style>

  <style name="AppBaseTheme.Dialog" parent="@android:style/Theme.Holo.Dialog">
    <!-- API 14 theme customizations can go here. -->
  </style>

  <style name="AppBaseTheme.Light.Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
    <!-- API 14 theme customizations can go here. -->
  </style>

  <style name="AppBaseTheme.OverlayActionBar" parent="@style/AppBaseTheme">
    <item name="android:windowActionBarOverlay">true</item>

    <!-- API 14 theme customizations can go here. -->
  </style>

  <style name="AppBaseTheme.OverlayActionBar.Transparent"
         parent="@style/AppBaseTheme.OverlayActionBar">
    <!-- API 14 theme customizations can go here. -->
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:actionBarStyle">@style/ActionBarStyle.Transparent</item>
  </style>

  <style name="ActionBarStyle.Transparent" parent="@style/ActionBarStyle">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:backgroundStacked">@android:color/transparent</item>
  </style>

  <style name="ButtonBarButtonStyle" parent="@android:style/Widget.Button">
    <item name="android:layout_margin">4dp</item>
    <item name="android:background">@drawable/btn_default</item>
    <item name="android:textSize">36sp</item>
    <item name="android:textColor">@color/btn_default</item>
  </style>


  <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar">
    <item name="android:indeterminateDrawable">@drawable/progress_circle</item>
    <item name="android:minWidth">60dp</item>
    <item name="android:minHeight">60dp</item>
  </style>


  <style name="InnoCar.Button">
    <item name="android:background">@drawable/btn_blue_default</item>
    <item name="android:textSize">36sp</item>
    <item name="android:textColor">@color/btn_blue_default</item>
  </style>




</resources>
